// Online C compiler to run C program online
#include <stdio.h>
void checkprime(int n)
{
    int flag=1;
    for(int i=2;i<=n/2;i++)
    {
        if(n%i==0)
        flag=0;
        break;
    }
    if(flag)
    {
        printf("the number will be prime %d",n);
    }
    else{
        printf("the number not a prime number %d",n);
    }
    
}

int main()
{
   int n=5;
   checkprime(n);
}
